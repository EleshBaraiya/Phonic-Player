<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.tatwadeep.phonicplayer.views.PhonicPlayerView
        android:id="@+id/a_main_audio_player1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:custom_layout="@layout/view_audio_player_normal" />

    <com.tatwadeep.phonicplayer.views.PhonicPlayerView
        android:id="@+id/a_main_audio_player2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:custom_layout="@layout/view_audio_player_normal" />

    <com.tatwadeep.phonicplayer.views.PhonicPlayerView
        android:id="@+id/a_main_audio_player3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:custom_layout="@layout/view_audio_player_conversation" />


</LinearLayout>